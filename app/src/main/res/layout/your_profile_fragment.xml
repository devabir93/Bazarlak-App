<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/container"
    >

    <include
        android:id="@+id/second_toolbar"
        layout="@layout/secendary_toolbar_layout"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/second_toolbar"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/edit_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_profile"
            android:layout_marginLeft="@dimen/margin_profile"
            android:layout_marginEnd="@dimen/margin_profile"
            android:layout_marginRight="@dimen/margin_profile"
            android:orientation="horizontal">

            <TextView
                style="@style/your_profile_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/account_info_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/textColor"
                android:text="@string/edit_label" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_profile"
            android:layout_marginLeft="@dimen/margin_profile"
            android:layout_marginEnd="@dimen/margin_profile"
            android:layout_marginRight="@dimen/margin_profile"
            android:orientation="horizontal">

            <TextView
                style="@style/your_profile_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/password_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/textColor"
                android:text="@string/edit_label" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_profile"
            android:layout_marginLeft="@dimen/margin_profile"
            android:layout_marginEnd="@dimen/margin_profile"
            android:layout_marginRight="@dimen/margin_profile"
            android:orientation="horizontal">

            <TextView
                style="@style/your_profile_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/email_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/textColor"
                android:text="@string/edit_label" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />
        <RelativeLayout
            android:id="@+id/payment_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_profile"
            android:layout_marginLeft="@dimen/margin_profile"
            android:layout_marginEnd="@dimen/margin_profile"
            android:layout_marginRight="@dimen/margin_profile"
            android:orientation="horizontal">

            <TextView
                style="@style/your_profile_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/payment_details" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/textColor"
                android:text="@string/edit_label" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <RelativeLayout
            android:id="@+id/shipping_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_profile"
            android:layout_marginLeft="@dimen/margin_profile"
            android:layout_marginEnd="@dimen/margin_profile"
            android:layout_marginRight="@dimen/margin_profile"
            android:orientation="horizontal">

            <TextView
                style="@style/your_profile_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/shipping_address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/textColor"
                android:text="@string/edit_label" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />
    </LinearLayout>


    <Button
        android:id="@+id/signout_button"
        style="@style/blackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signout_label"
        app:layout_constraintBottom_toBottomOf="parent"
         />
</android.support.constraint.ConstraintLayout>