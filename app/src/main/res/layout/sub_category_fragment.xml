<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_sub_category"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/second_toolbar"
        layout="@layout/secendary_toolbar_layout"/>

    <LinearLayout
        android:layout_marginTop="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sub_category_menu_RecyclerView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sub_cateory_details_RecyclerView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7" />
        <TextView
            android:visibility="gone"
            android:id="@+id/empty_view"
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/empty_view"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>

</FrameLayout>


