<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/content_padding_horizontal"
        >

        <RelativeLayout
            android:id="@+id/items_layout"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:checked="true"
                />

            <ImageView
                android:id="@+id/bag_imageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/checkBox"
                android:src="@color/app_menu_grey" />

            <TextView
                android:id="@+id/brand_name"
                style="@style/normalBlackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/bag_imageView"
                android:text="Brand Name" />

            <TextView
                android:id="@+id/item_type"
                style="@style/normalBlackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/brand_name"
                android:layout_below="@+id/brand_name"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/bag_imageView"
                android:text="Item Type"
                android:textColor="@color/textColor" />

            <TextView
                android:id="@+id/item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/bag_imageView"
                android:layout_alignStart="@+id/brand_name"
                android:layout_marginTop="8dp"
                android:text="Red, medium"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/price_textView"
                style="@style/noramSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_alignBottom="@id/bag_imageView"
                android:layout_alignParentEnd="true"
                android:text="33$"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black" />
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/items_layout"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/gray" />


        <EditText
            android:id="@+id/item_qyn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rec_shap"
            android:inputType="number"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/line"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingBottom="4dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:text="21"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <RelativeLayout
            android:visibility="gone"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:paddingEnd="@dimen/content_padding_horizontal"
            android:paddingStart="48dp">

            <LinearLayout
                android:id="@+id/labels_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <TextView
                    style="@style/noramSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subTotal_price_label" />

                <TextView
                    style="@style/noramSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/shipping_label" />

                <TextView
                    style="@style/noramSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/total_price_label"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_items_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/subTotal_textView"
                    style="@style/noramSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30$" />

                <TextView
                    android:id="@+id/shipping_textView"
                    style="@style/noramSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="3$" />

                <TextView
                    android:id="@+id/total_textView"
                    style="@style/noramSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="33$"
                    android:textColor="@color/black" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>
