<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    >

    <LinearLayout
        android:id="@+id/empty_bag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/bazarlakbag" />

        <TextView
            android:textColor="@color/text_light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_bag_1_label" />

        <TextView
            android:layout_marginTop="8dp"
            android:textColor="@color/text_light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_bag_2_label" />

        <TextView
            android:textColor="@color/text_light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_bag_3_label" />

        <Button
            android:id="@+id/go_shopping_button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/red_button_shap"
            android:text="@string/go_shopping_label"
            android:textColor="@color/buttonColor" />
    </LinearLayout>

</RelativeLayout>
