<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin">

            <TextView
                style="@style/thickBlackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/filter_label" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_expand" />

        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary"
            />

        <TextView
            style="@style/thickBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="@string/sort_label" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_menu_grey"
            />
        <TextView
            style="@style/normalBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/price1_label" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_menu_grey"
            />
        <TextView
            style="@style/normalBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/price2_label" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_menu_grey"
            />

        <TextView
            style="@style/thickBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="@string/refine_label" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_menu_grey"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/refine_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/apply_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        style="@style/redButton"
        android:layout_alignParentBottom="true"
        android:text="@string/apply_label"
        />
</RelativeLayout>
 